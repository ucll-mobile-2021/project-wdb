<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeKeeper.View.StopwatchPage"
             Title="Stopwatch">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Label x:Name="timeLabel" Text="{Binding StopwatchTime}" FontSize="64" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Orientation="Horizontal" >
                <Button  Text="Start" Clicked="OnStartClicked" Padding="30"  FontSize="16" HorizontalOptions="FillAndExpand"/>
                <Button Text="Reset" Clicked="OnResetClicked" Padding="30" FontSize="16" HorizontalOptions="FillAndExpand"/>
                <Button Text="Stop" Clicked="OnStopClicked" Padding="30" FontSize="16" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>